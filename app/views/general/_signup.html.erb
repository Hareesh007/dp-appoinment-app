<form id="signup_form">
  <div class="form-group">
    <input type="text"  id="user_name" placeholder="Name"  name="user_name" class="form-control"/>
  </div>
  <div class="form-group">
    <input type="text"  id="user_email" placeholder="Email" name="user_email" class="form-control"/>
  </div>
  <div class="form-group">
    <input type="password"  id="user_password" placeholder="Password" name="user_password"  class="form-control"/>
  </div>
  <div class="action_btn">
    <button class="btn btn-orange" id="auth_submit">Submit</button>
  </div>
</form>
